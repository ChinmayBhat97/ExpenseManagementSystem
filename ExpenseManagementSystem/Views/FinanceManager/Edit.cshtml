@model ExpenseManagementSystem.Models.PersonalClaim

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>
 <div style="padding-left:250px;"> 
        <h4> Manager action on applied claim </h4>

        <div class="row">
            <div class="col-md-12">
               
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <br />
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <b>Claimant Name: </b>  @Html.DisplayFor(model => model.claimantName)
                        </div>
                    </div>

                    <div class="col-md-5">
                        <div class="form-group">
                            <b>Claimant Email-ID: </b> @Html.DisplayFor(model => model.claimantEmailID)
                        </div>
                    </div>


                    <div class="col-md-3">
                        <div class="form-group">
                            <b> Department: </b> @Html.DisplayFor(model => model.DeptID)
                        </div>
                    </div>
                </div>

                <br />

                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <b>Manager Name: </b>  @Html.DisplayFor(model => model.managerName)
                        </div>
                    </div>

                    <div class="col-md-5">
                        <div class="form-group">
                            <b>Manager Email-ID: </b> @Html.DisplayFor(model => model.managerEmailID)
                        </div>
                    </div>


                    @*<div class="col-md-3">
                    <div class="form-group">
                    <b>Claimant Email-ID: </b> @Html.DisplayFor(model => model.DeptID)
                    </div>
                    </div>*@
                </div>

                <br />

                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <b>Bank Account Number: </b>  @Html.DisplayFor(model => model.accuntNumber)
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-group">
                            <b>IFSC: </b> @Html.DisplayFor(model => model.IFSC)
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group">
                            <b> Amount:  </b>  @Html.DisplayFor(model => model.claimAmount)
                        </div>
                    </div>
                </div>

                <br />



                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <b>Biling Date: </b>  @Html.DisplayFor(model => model.billingDate)
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-group">
                            <b>Claimed Date: </b> @Html.DisplayFor(model => model.claimingDate)
                        </div>
                    </div>

                   @* <div class="col-md-4">
                        <div class="form-group">
                            <b> Status: </b> @Html.DisplayFor(model => model.stusID)
                        </div>
                    </div>*@
                </div>

                <br />


                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <b>Claim Description: </b>  @Html.DisplayFor(model => model.description)
                        </div>
                    </div>
                </div>

                <br />

                <input type="hidden" asp-for="claimID" />
                <form asp-action="Edit">
                     <div class="row"> 
                            <div class="col-md-9"> 
                                <div class="form-group">
                                <b>  <label asp-for="remarkManager" class="control-label"></label></b> <span style="color:red;">*</span>
                                    <input asp-for="remarkManager" class="form-control" />
                                    <span asp-validation-for="remarkManager" class="text-danger"></span>
                                </div>
                            </div>

                           
                                <div class="col-md-3">
                                    <div class="form-group">
                                <b> <label asp-for="stusID" class="control-label"></label> </b> <span style="color:red;">*</span>
                                        <select asp-for="stusID" class="form-control" asp-items="ViewBag.stusID"></select>
                                        <span asp-validation-for="stusID" class="text-danger"></span>
                                    </div>
                                </div>

                          
                    </div>
                   
                    
                </form>
                <br />
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
                <br />
                <div>
                    <a asp-action="Index">Back to List</a>
                </div>

            </div>
        </div>

        
 </div>
</body>
</html>


