<body style="overflow:auto">

<div style="padding-left:250px;">
        <h4 style="padding-top:10px;color:#0000b3"> <u> Approved Claim Details</u> </h4>
    <br />
        <div class="col-md-12">


                    <div class="row">
                                <div class="col-md-4">
                                  <div class="form-group">
                                    <b>Claimant Name: </b>  @Html.DisplayFor(model => model.claimantName)
                                  </div>
                                </div>
                           
                            <div class="col-md-5">
                              <div class="form-group">
                                  <b>Claimant Email-ID: </b> @Html.DisplayFor(model => model.claimantEmailID)
