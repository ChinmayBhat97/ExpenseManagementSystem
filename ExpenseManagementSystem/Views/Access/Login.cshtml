@model ExpenseManagementSystem.Models.Employee;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

</head>
<body style="background-color:#e6ffcc">
    <div class="row">
       
       
        <div class="col-md-12">
            <div style="padding-left:150px"> 
                    <h1 style="padding-left:200px;padding-top:50px;color:navy">Expense Management System </h1>
                    <br />
                    <br />
                    <h4 style="padding-left:290px">Login here to access application! </h4>
                    <br />
                   <form asp-controller="Access" asp-action="Login" method="post">
                        <div class="col-md-7" style="padding-left:300px">
                            <br />


                            <div class="form-group">
                                
                                <b> <label> Email-ID </label> </b> <span style="color:red;">*</span> :  <input type="email" name="emailID" class="form-control" placeholder="Email-ID" /><span asp-validation-for="Email" class="text-danger"></span>
                                <br />
                                <b> <label> Password </label></b> <span style="color:red;">*</span> : <input type="password" name="pwd" class="form-control" placeholder="Password" /><span asp-validation-for="passWord" class="text-danger"></span>

                                @* <lable>
                                <input type="checkbox" name="keepIn" /> Keep Me Logged In.
                                </lable>*@
                                <br />
                                <div style="padding-left:270px">
                                <button type="submit" class="btn btn-primary"> Login</button>
                                </div>
                               

                                @if (ViewData["validateMessage"] != null)
                                {
                                    <br />
                                    <br />
                                    <label> @ViewData["validateMessage"]</label>
                                }
                            </div>
                        </div>
                    </form>
            </div>
        </div>

    </div>
  

</body>
</html>


